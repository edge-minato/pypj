{
  // interpreter
  "python.pythonPath": "${workspaceFolder}/.venv/bin/python",
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  // linter
  "python.linting.enabled": true,
  "python.linting.lintOnSave": true,
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Path": "${workspaceFolder}/.venv/bin/pflake8",
  "python.linting.flake8Args": [], // To overwrite the global settings with pyproject.toml
  "python.linting.mypyEnabled": true,
  "python.linting.mypyPath": "${workspaceFolder}/.venv/bin/mypy",
  "python.linting.mypyArgs": ["--config-file", "pyproject.toml"],
  // formatter
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "${workspaceFolder}/.venv/bin/black",
  "python.formatting.blackArgs": [], // To overwrite the global settings with pyproject.toml
  "python.sortImports.path": "${workspaceFolder}/.venv/bin/isort",

  // python specific
  "[python]": {
    "editor.defaultFormatter": null,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    },
    "editor.formatOnSave": true
  },

  // common
  "cSpell.words": ["noqa", "pyproject", "PACKAGE_NAME"],

  // hide files and directories
  "files.exclude": {
    ".coverage": true,
    ".mypy_cache": true,
    ".pytest_cache": true,
    ".tox": true,
    ".venv": true
  }
}
